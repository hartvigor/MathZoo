<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:background="@drawable/background_main_landscape">

    <ImageView
        android:layout_width="325dp"
        android:layout_height="156dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_zoomath"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.097" />

    <ImageButton
        android:id="@+id/btn_start_game"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/sh_round_btn"
        android:onClick="startGameActivity"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_play"

        android:text="@string/MainActivity_Spill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.872"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_statistic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/sh_round_btn"
        android:onClick="showStatistic"

        android:scaleType="center"
        android:src="@drawable/ic_graph"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.86"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.933" />

    <ImageButton
        android:id="@+id/btn_preferences"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/sh_round_btn"
        android:onClick="showPreferences"
        android:scaleType="center"

        android:src="@drawable/ic_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.86"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066" />

</androidx.constraintlayout.widget.ConstraintLayout>